<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="jshoppingproducts" method="upgrade">
	<name>JoomShopping Product canonical</name>
	<creationDate>13.04.2025</creationDate>
	<version>5.1.1</version>
	<author>MAXXmarketing</author>
	<authorEmail>support@webdesigner-profi.de</authorEmail>
	<authorUrl>https://www.webdesigner-profi.de/</authorUrl>
	<copyright>MAXXmarketing GmbH</copyright>
	<license>MAXXmarketing</license>
	<description>Product canonical</description>
	<namespace path="src">Joomla\Plugin\Jshoppingproducts\Product_canonical</namespace>
	<files>
		<folder>services</folder>
		<folder plugin="product_canonical">src</folder>
		<filename>product_canonical.xml</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="hidemain" type="radio"
					   description="Hide on main category"
					   label="Hide on main category"
					   default="1"
					   layout="joomla.form.field.radio.switcher"
					   class="btn-group btn-group-yesno">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="dis_generate_main_url"
					   type="radio"
					   description="Disable generate product URL for main category"
					   label="Disable generate product URL for main category"
					   default="1"
					   layout="joomla.form.field.radio.switcher"
					   class="btn-group btn-group-yesno">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>